<!DOCTYPE html>
<html>
<head>
  <title>Application</title>
  <link href='https://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Lato:400,700,400italic,300,100,300italic,100italic,700italic' rel='stylesheet' type='text/css'>
  <style>
    .b-preloader {
      background-color: #2c323e;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 15;
      transition: opacity 1s;
    }

    .b-preloader_hidden {
      opacity: 0;
    }

    .b-preloader__spinner {
      display: flex;
      height: 55px;
      text-align: center;
      font-size: 10px;
    }

    .b-preloader__rect {
      background-color: #fff;
      height: 100%;
      width: 1px;
      margin: 0 3px;
      -webkit-animation: stretchdelay 1.2s infinite ease-in-out;
      animation: stretchdelay 1.2s infinite ease-in-out;
    }

    .b-preloader__rect_2 {
      -webkit-animation-delay: -1.1s;
      animation-delay: -1.1s;
    }

    .b-preloader__rect_3 {
      -webkit-animation-delay: -1.0s;
      animation-delay: -1.0s;
    }

    .b-preloader__rect_4 {
      -webkit-animation-delay: -0.9s;
      animation-delay: -0.9s;
    }

    .b-preloader__rect_5 {
      -webkit-animation-delay: -0.8s;
      animation-delay: -0.8s;
    }

    @-webkit-keyframes stretchdelay {
      0%, 40%, 100% { -webkit-transform: scaleY(0.4) }  
      20% { -webkit-transform: scaleY(1.0) }
    }

    @keyframes stretchdelay {
      0%, 40%, 100% { 
        transform: scaleY(0.4);
        -webkit-transform: scaleY(0.4);
      }  20% { 
        transform: scaleY(1.0);
        -webkit-transform: scaleY(1.0);
      }
    }
  </style>
</head>
<body>
  <div id="root"></div>
  <div class="b-preloader">
    <div class="b-preloader__spinner">
      <div class="b-preloader__rect b-preloader__rect_1"></div>
      <div class="b-preloader__rect b-preloader__rect_2"></div>
      <div class="b-preloader__rect b-preloader__rect_3"></div>
      <div class="b-preloader__rect b-preloader__rect_4"></div>
      <div class="b-preloader__rect b-preloader__rect_5"></div>
    </div>
  </div>
  <script src="/static/js/bundle.js"></script>
</body>
</html>
